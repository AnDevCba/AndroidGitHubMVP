<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andevcba.githubmvp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.GitHubMVPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.show_repos.view.ShowReposActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.add_repos.AddReposActivity"
            android:parentActivityName=".presentation.show_repos.view.ShowReposActivity" />
    </application>
</manifest>